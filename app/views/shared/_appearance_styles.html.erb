<%# OVERRIDE: Add custom header & footer gradients for Adventist Digital Library %>

<% # Dynamic styles added by the admin in the appearances page %>
<% appearance = Hyrax::Forms::Admin::Appearance.new %>
<style>
<% unless appearance.body_font.include?('Helvetica') %>
  @import url(//<%= appearance.font_import_body_url %>);
<% end %>
<% unless appearance.body_font.include?('Helvetica') %>
  @import url(//<%= appearance.font_import_headline_url %>);
<% end %>

.public-facing { font-family: <%= appearance.font_body_family %> }
.public-facing h1,
.public-facing h2,
.public-facing h3,
.public-facing h4,
.public-facing h5,
.public-facing h6 { font-family: <%= appearance.font_headline_family %>}

/* LINK COLORS */
.public-facing a { color: <%= appearance.link_color %>; }
.public-facing a:hover,
.public-facing a:focus { color: <%= appearance.link_hover_color %>; }
.public-facing #sort-dropdown .dropdown-toggle,
.public-facing #per_page-dropdown .dropdown-toggle { color: <%= appearance.link_color %>; }

/* MAIN NAV */
.public-facing .navbar-inverse .navbar-link { color: <%= appearance.footer_link_color %>; }
.public-facing .navbar-inverse .navbar-link:hover { color: <%= appearance.footer_link_hover_color %> }
.public-facing .navbar-inverse { background-color: <%= appearance.header_background_color %>; }
.public-facing .navbar-inverse .navbar-nav > .open > a,
.public-facing .navbar-inverse .navbar-nav > .open > a:hover,
.public-facing .navbar-inverse .navbar-nav > .open > a:focus { background-color: <%= appearance.header_background_color %>; }
.public-facing .navbar-inverse .navbar-nav > li > a,
.public-facing .navbar-inverse .navbar-text,
.public-facing .navbar-inverse .navbar-brand { color: <%= appearance.header_text_color %>; }
.public-facing .navbar-inverse { border-color: <%= appearance.header_background_border_color %>; }

/* HOME PAGE SEARCH BAR NAV */
.public-facing .image-masthead .navbar { background-color: <%= appearance.searchbar_background_color_alpha %>; }
.public-facing .image-masthead .navbar .active > a,
.public-facing .image-masthead .navbar .active > a:hover,
.public-facing .image-masthead .navbar .active > a:focus {
    background-color: <%= appearance.searchbar_background_color_active %>;
    color: <%= appearance.searchbar_text_color %>;
}
.public-facing .image-masthead .navbar .navbar-nav a {
    color: <%= appearance.searchbar_text_color %>;
}

.public-facing .image-masthead .navbar .navbar-nav a:hover,
.public-facing .image-masthead .navbar .navbar-nav a:focus {
    background-color: <%= appearance.searchbar_background_hover_color_alpha %>;
    color: <%= appearance.searchbar_text_hover_color %>;
}

/* HOME PAGE NAV-PILL TABS */
.public-facing .nav-pills > li.active > a,
.public-facing .nav-pills > li.active > a:hover,
.public-facing .nav-pills > li.active > a:focus {
    background-color: <%= appearance.active_tabs_background_color %>;
}

/* PRIMARY BUTTON STYLES */
.public-facing .btn-primary {
  background-color: <%= appearance.primary_button_background_color %>;
  border-color: <%= appearance.primary_button_border_color %>;
}
.public-facing .btn-primary:focus,
.public-facing .btn-primary.focus {
  background-color: <%= appearance.primary_button_focus_background_color %>;
  border-color: <%= appearance.primary_button_focus_border_color %>;
}
.public-facing .btn-primary:hover {
  background-color: <%= appearance.primary_button_hover_background_color %>;
  border-color: <%= appearance.primary_button_hover_border_color %>;
}
.public-facing .btn-primary:active,
.public-facing .btn-primary.active {
  background-color: <%= appearance.primary_button_background_color %>;
  border-color: <%= appearance.primary_button_border_color %>;
}
.public-facing .btn-primary:active:hover,
.public-facing .btn-primary:active:focus,
.public-facing .btn-primary:active.focus,
.public-facing .btn-primary.active:hover,
.public-facing .btn-primary.active:focus,
.public-facing .btn-primary.active.focus{
  background-color: <%= appearance.primary_button_background_color %>;
  border-color: <%= appearance.primary_button_border_color %>;
}
.public-facing .btn-primary.disabled:hover,
.public-facing .btn-primary.disabled:focus,
.public-facing .btn-primary.disabled.focus,
.public-facing .btn-primary[disabled]:hover,
.public-facing .btn-primary[disabled]:focus,
.public-facing .btn-primary[disabled].focus {
  background-color: <%= appearance.primary_button_background_color %>;
  border-color: <%= appearance.primary_button_border_color %>;
}

/* DEFAULT BUTTON STYLES */
.public-facing .btn-default {
  background-color: <%= appearance.default_button_background_color %>;
  border-color: <%= appearance.default_button_border_color %>;
  color: <%= appearance.default_button_text_color %>;;
}
.public-facing .btn-default:focus,
.public-facing .btn-default.focus {
  background-color: <%= appearance.default_button_focus_background_color %>;
  border-color: <%= appearance.default_button_focus_border_color %>;
}
.public-facing .btn-default:hover {
  background-color: <%= appearance.default_button_hover_background_color %>;
  border-color: <%= appearance.default_button_hover_border_color %>;
}
.public-facing .btn-default:active,
.public-facing .btn-default.active {
  background-color: <%= appearance.default_button_background_color %>;
  border-color: <%= appearance.default_button_border_color %>;
}
.public-facing .btn-default:active:hover,
.public-facing .btn-default:active:focus,
.public-facing .btn-default:active.focus,
.public-facing .btn-default.active:hover,
.public-facing .btn-default.active:focus,
.public-facing .btn-default.active.focus{
  background-color: <%= appearance.default_button_background_color %>;
  border-color: <%= appearance.default_button_border_color %>;
}
.public-facing .btn-default.disabled:hover,
.public-facing .btn-default.disabled:focus,
.public-facing .btn-default.disabled.focus,
.public-facing .btn-default[disabled]:hover,
.public-facing .btn-default[disabled]:focus,
.public-facing .btn-default[disabled].focus {
  background-color: <%= appearance.default_button_background_color %>;
  border-color: <%= appearance.default_button_border_color %>;
}

/* FACET PANEL STYLES */
.public-facing .panel-default > .panel-heading {
    color: <%= appearance.facet_panel_text_color %>;
    background-color: <%= appearance.facet_panel_background_color %>;
    border-color: <%= appearance.facet_panel_border_color %>;
}
.public-facing .panel-default { border-color: <%= appearance.facet_panel_border_color %>; }
.public-facing .panel-heading.collapse-toggle .panel-title:after { color: <%= appearance.facet_panel_text_color %>; }


/* CUSTOM ADVENTIST DIGITAL LIBRARY OVERRIDE COLOR FOR HEADER & FOOTER */
.public-facing #masthead.navbar.navbar-inverse.navbar-static-top {
  background: linear-gradient(<%= appearance.custom_adl_header_footer_color %>, #ffffff, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0));
}
.public-facing .navbar.navbar-inverse.site-footer {
    background: linear-gradient(#F5F5F6, <%= appearance.custom_adl_header_footer_color %>);
}

<%= appearance.custom_css_block %>

</style>
