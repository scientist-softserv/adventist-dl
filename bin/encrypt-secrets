#!/usr/bin/env ruby

# require 'byebug'

parent_dir = File.dirname(__dir__)
Dir.chdir(File.join(parent_dir, 'ops', 'provision'))
[
  ".env.*",
  "kube_config.yml",
  ".backend",
  "k8s/*-values.yaml"
].each do |files|
  Dir.glob(files).each do |file|
    next if file.match(/enc/)
    cmd = "sops --encrypt #{file} > #{file}.enc"
    puts cmd
    %x{#{cmd}}
  end
end
